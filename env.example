# =============================================================================
# FICHIER D'EXEMPLE - COPIEZ VERS .env.local POUR LE DÉVELOPPEMENT
# =============================================================================

# =============================================================================
# CONFIGURATION DATABASE (PostgreSQL)
# =============================================================================
# Développement local (Docker Compose)
DATABASE_URL="postgresql://nexus_user:nexus_password@postgres-db:5432/nexus_reussite_dev?schema=public"
# Option shadow database pour Prisma migrate (recommandée)
# SHADOW_DATABASE_URL="postgresql://nexus_user:nexus_password@postgres-db:5432/nexus_reussite_shadow?schema=public"
# Production (VPS/PostgreSQL managé)
# DATABASE_URL="postgresql://username:password@localhost:5432/nexus_reussite_prod?schema=public"

# =============================================================================
# CONFIGURATION NEXTAUTH
# =============================================================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-min-32-chars-for-production-change-this"

# =============================================================================
# CONFIGURATION SMTP (Email)
# =============================================================================
SMTP_HOST="smtp.hostinger.com"
SMTP_PORT="465"
SMTP_SECURE="true"
SMTP_USER="contact@nexusreussite.academy"
SMTP_PASSWORD="your-hostinger-smtp-password"
SMTP_FROM="Nexus Réussite <contact@nexusreussite.academy>"

# =============================================================================
# CONFIGURATION OPENAI (IA ARIA)
# =============================================================================
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4o-mini"

# =============================================================================
# CONFIGURATION PAIEMENTS KONNECT
# =============================================================================
KONNECT_API_KEY="your-konnect-api-key"
KONNECT_WALLET_ID="your-wallet-id"
KONNECT_BASE_URL="https://api.konnect.network"
KONNECT_WEBHOOK_SECRET="your-webhook-secret"

# =============================================================================
# CONFIGURATION PAIEMENTS WISE (Affichage Manuel)
# =============================================================================
NEXT_PUBLIC_WISE_BENEFICIARY_NAME="Nexus Réussite SARL"
NEXT_PUBLIC_WISE_IBAN="TN59 1234 5678 9012 3456 7890 12"
NEXT_PUBLIC_WISE_BIC="BANKTNTT"
NEXT_PUBLIC_WISE_ADDRESS="Centre Urbain Nord, Immeuble VENUS, Apt. C13, 1082 – Tunis"
NEXT_PUBLIC_WISE_BANK_NAME="Banque Internationale Arabe de Tunisie"

# =============================================================================
# CONFIGURATION JITSI MEET
# =============================================================================
JITSI_ENABLED=true
JITSI_BASE_URL="https://meet.jit.si"
JITSI_DOMAIN="meet.jit.si" # rétrocompatibilité éventuelle

# =============================================================================
# OBSERVABILITÉ (Optionnel)
# =============================================================================
# SENTRY_DSN="https://public@sentry.example/42"
# SENTRY_TRACES_SAMPLE_RATE="0.1"

# =============================================================================
# CONFIGURATION ENVIRONNEMENT
# =============================================================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Santé API (désactive la vérification DB pour /api/health)
DISABLE_DB_HEALTH="false"

# Variables pour Docker Compose (Développement)
POSTGRES_USER=nexus_user
POSTGRES_PASSWORD=nexus_password
POSTGRES_DB=nexus_reussite_dev
DATABASE_PASSWORD=nexus_password

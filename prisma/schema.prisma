  // R√©sultat de l'analyse IA
  analysisResult String? // R√©sum√© de l'analyse
  actionPlan     String? // Plan d'action personnalis√©

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([type, status])
  @@index([studentEmail])
  @@map("diagnostics")
}

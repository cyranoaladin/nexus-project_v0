{
  "name": "nexus-reussite-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "PORT=3000 next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --projects jest.config.unit.js jest.config.integration.js",
    "test:unit": "jest --config jest.config.unit.js",
    "test:integration": "jest --config jest.config.integration.js",
    "test:watch": "jest --projects jest.config.unit.js jest.config.integration.js --watch",
    "test:coverage": "jest --projects jest.config.unit.js jest.config.integration.js --coverage",
    "test:e2e": "playwright test",
    "seed:test": "dotenv -e .env.local -- tsx prisma/seed.ts",
    "db:reset:test": "dotenv -e .env.local -- prisma db push --force && dotenv -e .env.local -- tsx prisma/seed.ts",
    "test:e2e:seq": "bash -lc 'mkdir -p e2e-logs && rm -f e2e-logs/*.log; E2E_RUN=1 KONNECT_E2E=1 E2E_BASE_URL=http://localhost:3000 NEXT_PUBLIC_E2E=1 playwright test --reporter=line --project=webkit --workers=1 --retries=2 2>&1 | tee e2e-logs/webkit.log; E2E_RUN=1 KONNECT_E2E=1 E2E_BASE_URL=http://localhost:3000 NEXT_PUBLIC_E2E=1 playwright test --reporter=line --project=chromium --retries=0 2>&1 | tee e2e-logs/chromium.log; E2E_RUN=1 KONNECT_E2E=1 E2E_BASE_URL=http://localhost:3000 NEXT_PUBLIC_E2E=1 playwright test --reporter=line --project=firefox --retries=1 2>&1 | tee e2e-logs/firefox.log'",
    "test:e2e:ui": "playwright test --ui",
    "db:generate": "prisma generate",
    "db:push": "dotenv -e .env.local -- prisma db push || dotenv -e .env -- prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "dotenv -e .env.local -- prisma migrate deploy",
    "db:seed": "dotenv -e .env.local -- tsx prisma/seed.ts || dotenv -e .env -- tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:test": "node test-db-connection.js",
    "check-config": "node scripts/check-config.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean:artifacts": "bash -lc 'rm -rf services/pdf_generator_service/.test_output services/pdf_generator_service/generated_pdfs e2e-logs test-results playwright-report reports *.pid *.log || true'",
    "clean:cache": "bash -lc 'rm -rf .next coverage dist || true'",
    "clean": "npm run clean:artifacts && npm run clean:cache",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^6.14.0",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.5",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.0.0",
    "ioredis": "^5.4.1",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "katex": "^0.16.11",
    "lucide-react": "^0.536.0",
    "markdownlint-cli": "^0.45.0",
    "next": "^14.2.3",
    "next-auth": "^4.24.11",
    "nodemailer": "^6.10.1",
    "openai": "^4.104.0",
    "pdfkit": "^0.17.1",
    "pino": "^9.3.2",
    "react": "^18.2.0",
    "react-day-picker": "^9.8.1",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.62.0",
    "react-markdown": "^9.1.0",
    "recharts": "^3.1.0",
    "rehype-katex": "^7",
    "remark-math": "^6",
    "sonner": "^1.5.0",
    "tsx": "^4.20.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.9",
    "@types/pdfkit": "^0.17.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.2.1",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.6.2",
    "prisma": "^6.14.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}

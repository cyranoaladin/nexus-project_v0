{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [
      "node",
      "vitest/importMeta",
      "vitest/globals"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true
  },
  "include": [
    "vitest.setup.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx"
  ]
}

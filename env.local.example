# Unified environment template for local development

# Next.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=change_me_in_production

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/nexus_dev?schema=public

# ARIA services
LLM_SERVICE_URL=http://localhost:8003
PDF_GENERATOR_SERVICE_URL=http://localhost:8002
RAG_SERVICE_URL=http://localhost:8001

# Rate limit (development)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60

# Email (dev stubs)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=dev
SMTP_PASSWORD=dev
SMTP_FROM=no-reply@nexus.local

# Feature flags
ENABLE_ARIA_PREMIUM=true
ENABLE_GUARANTEE=true

# Embeddings (OpenAI Option A)
OPENAI_EMBEDDINGS_MODEL=text-embedding-3-large
VECTOR_DIM=3072

# MinIO (local dev)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=nexus-docs
MINIO_PUBLIC_ENDPOINT=http://localhost:9000

# Redis
REDIS_URL=redis://localhost:6379

# Observability (optional)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Playwright/E2E (single source of truth: 3001)
E2E_BASE_URL=http://localhost:3001
NEXT_PUBLIC_E2E=0
E2E_RUN=0

# Unified environment template for local development

# Next.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=change_me_in_production

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/nexus_dev?schema=public
# Postgres container (used by docker-compose dev:infra)
POSTGRES_DB=nexus_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ARIA services (host ports from docker-compose.yml)
RAG_SERVICE_URL=http://localhost:8000
LLM_SERVICE_URL=http://localhost:8001
PDF_GENERATOR_SERVICE_URL=http://localhost:8002

# Rate limit (development)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60

# Email (dev stubs)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=dev
SMTP_PASSWORD=dev
SMTP_FROM=no-reply@nexus.local
SMTP_SECURE=false

# Feature flags
ENABLE_ARIA_PREMIUM=true
ENABLE_GUARANTEE=true

# =============================================
# Nexus Réussite - Production Environment (.env)
# DO NOT COMMIT REAL SECRETS. COPY THIS FILE.
# =============================================

# App
NODE_ENV=production
NEXTAUTH_URL=https://nexusreussite.academy
NEXTAUTH_SECRET={{NEXTAUTH_SECRET}}
NEXT_PUBLIC_APP_URL=https://nexusreussite.academy

# Database (compose postgres service)
POSTGRES_USER=nexus_user
POSTGRES_PASSWORD={{POSTGRES_PASSWORD}}
POSTGRES_DB=nexus_reussite_prod
# Prisma connection string for the app
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public

# SMTP (emails)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER={{SMTP_USER}}
SMTP_PASSWORD={{SMTP_PASSWORD}}
SMTP_FROM="Nexus Réussite <no-reply@nexusreussite.academy>"

# OpenAI (ARIA)
OPENAI_API_KEY={{OPENAI_API_KEY}}
OPENAI_MODEL=gpt-4o-mini

# Konnect (paiements)
KONNECT_API_URL=https://api.konnect.network
KONNECT_API_KEY={{KONNECT_API_KEY}}
KONNECT_WEBHOOK_SECRET={{KONNECT_WEBHOOK_SECRET}}
KONNECT_RETURN_URL=https://nexusreussite.academy/dashboard/parent/paiement/confirmation
KONNECT_CANCEL_URL=https://nexusreussite.academy/dashboard/parent/paiement

# Sentry (optionnel)
# SENTRY_DSN=https://public@example.ingest.sentry.io/42
# SENTRY_TRACES_SAMPLE_RATE=0.1

# Health check (laisser false en prod pour vérifier DB)
DISABLE_DB_HEALTH=false